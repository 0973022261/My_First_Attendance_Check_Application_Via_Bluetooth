<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CheckAttendandce">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="149dp"
        android:textSize="50dp"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_date"
        android:layout_below="@+id/textView_name"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:ellipsize="end"
        android:singleLine="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="미출석"
        android:id="@+id/button_attendance_check"
        android:layout_below="@+id/textView_date"
        android:layout_alignParentEnd="true"
        android:textSize="50dp"
        android:onClick="onButton1Clicked" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_attendance_check"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출석 횟수"
                android:id="@+id/textView7"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/attendance_number"
                android:gravity="center|clip_vertical"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결석 횟수"
                android:id="@+id/textView9"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/absent_number"
                android:gravity="center"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지각 횟수"
                android:id="@+id/textView11"
                android:gravity="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/late_number"
                android:gravity="center"
                android:textSize="50dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_week"
        android:layout_below="@+id/textView_name"
        android:layout_toEndOf="@+id/textView_date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중간고사"
        android:id="@+id/button7"
        android:layout_below="@+id/textView_date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:onClick="onButtonMidClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기말고사"
        android:id="@+id/button10"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:onClick="onButtonFinalClicked" />
</RelativeLayout>
